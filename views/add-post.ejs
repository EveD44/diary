<%- include("partials/header.ejs") %>

<div class="page-top">
    <a href="/"><img src="/home-icon.png"></a>
    <h1>Add an entry</h1>
</div>



  <form action="/submit" method="POST" class="diary-entry-form">
    <input type="text" name="title" class="entry-title" placeholder="Title">
    <textarea name="content" placeholder="Diary entry" value=></textarea>
    <br />
    <% if (locals.activity) { %> 
      <% if (activity == 1) { %> 
        <img src="/weather-icons/icon-45.png" class="weather-icon" name="weathericon">
        <input type="hidden" name="weathericon" value="45" />
      <% } else { %>
      <img src="/weather-icons/icon-<%= activity.DailyForecasts[0].Day.Icon %>.png" class="weather-icon" name="weathericon">
      <input type="hidden" name="weathericon" value="<%= activity.DailyForecasts[0].Day.Icon %>" />
      <p><%= activity.DailyForecasts[0].Day.Icon %></p>
    <% }}  %>
    <br />
    <button type="submit" id="entryButton">OK</button>
</form>

<%if (locals.message) {%>
    <span id="success-message"><%= message %></span>

  <%};%>

</html>